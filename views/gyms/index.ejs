<% layout("layouts/boilerplate") %>
    <h1>All Gyms</h1>
    <div>
        <a href="/gyms/new">New Gym</a>
    </div>
    <% for(let gym of gyms) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= gym.image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= gym.name %>
                        </h5>
                        <p class="card-text">
                            <%= gym.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= gym.location %>, Poland
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/gyms/<%= gym.id %>">View <%= gym.name %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>